{
  "name": "global-technical",
  "version": "1.0.0",
  "description": "Electron app to load web application with progress bar",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "web",
    "loader"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "ws": "^8.18.3",
    "zkteco-js": "^1.7.1"
  },
  "build": {
    "appId": "com.yourcompany.webapploader",
    "productName": "Web App Loader",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
